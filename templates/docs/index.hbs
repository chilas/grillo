<div class="pages">
	<ul class="pages-list clearfix">
		{{#each pages}}
			<li><a href="{{basename}}.html">
				{{#if data.title}}
					{{data.title}} Page
				{{else}}
					{{basename}}
				{{/if}}
			</a></li>
		{{/each}}
	</ul>
</div>
